root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.go]
indent_size = 4
indent_style = tab

[*.java]
indent_size = 4

[*.fish]
indent_size = 4

[Makefile]
indent_size = 8
indent_style = tab
