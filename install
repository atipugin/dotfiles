#!/bin/sh

# 0. Install Command Line Tools manually (https://github.com/Homebrew/brew/issues/4996)
xcode-select --install

# 1. Install Homebrew
if ! command -v brew >/dev/null; then
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# 2. Install Homebrew Bundle
brew tap Homebrew/bundle

# 3. Clone the repo
dir=$HOME/.dotfiles
if [ ! -d "$dir" ]; then
  git clone https://github.com/atipugin/dotfiles.git "$dir"
fi

# 4. Install brews and apps
brew bundle --file="$dir/Brewfile"

# 5. Install dotfiles
env RCRC="$dir/rcrc" rcup

# 6. Configure OSX
"$dir/osx"
