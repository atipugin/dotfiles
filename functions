# Create a new git repo
mkrepo() {
  mkdir -p "$1"
  cd "$1" || exit
  git init
  touch .gitignore
  git add .
  git commit -m "First commit"
}

# Create a file within any dir
mkfile() {
  local base_path
  base_path=$(dirname "$1")
  if [[ ! -d base_path ]]; then
    mkdir -p "$base_path"
  fi

  touch "$1"
}

# Get my ip address
myip() {
  dig +short myip.opendns.com @resolver1.opendns.com
}

[[ -f ~/.functions.local ]] && source ~/.functions.local
